<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:view="clr-namespace:RadioMaui.Views"
             xmlns:local="clr-namespace:RadioMaui"
             x:Class="RadioMaui.MainPage">
    <ContentPage.Resources>
        <local:CnavasTest x:Key="drawable" />
    </ContentPage.Resources>
    <ScrollView>
        <HorizontalStackLayout Padding="30,0" Spacing="25">

            <GraphicsView WidthRequest="800" HeightRequest="600" Drawable="{StaticResource drawable}" />
            <view:MainView />

        </HorizontalStackLayout>
    </ScrollView>
</ContentPage>